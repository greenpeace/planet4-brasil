{
  "name": "planet4-brasil/planet4-brasil",
  "description": "Greenpeace P4 Brasil",
  "license": "MIT",
  "require": {
    "greenpeace/planet4-child-theme-brasil": "dev-main",
    "plugins/gravityformshubspot": "*",
    "wpackagist-plugin/notification": "7.2.4"
  },
  "scripts": {
    "core:language": "wp language core install pt_BR; wp language core activate pt_BR",
    "core:gf-language": "mkdir -p public/wp-content/languages/gravityforms/; rsync -ar extra/gravityforms-pt_BR/ public/wp-content/languages/gravityforms/",
    "site:custom" : [
      "@core:language",
      "@core:gf-language"
    ]
  }
}
